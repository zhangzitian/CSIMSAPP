<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rl2"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_line_red" />

        <TextView
            android:id="@+id/tv_prodNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="产品编码：201709808747374" />

        <TextView
            android:id="@+id/tv_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/title_back_color"
            tools:text="已领取" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/mWareHouseNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:text="商品名称：外教口语课150课时" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_piecesNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#343434" />

            <TextView
                android:id="@+id/tv_packNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="2"
                android:textColor="#343434" />

            <TextView
                android:id="@+id/tv_bookNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="3"
                android:textColor="#343434" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ItemQuxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/btnError"
                android:background="@drawable/btn_bg_hui"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text=""
                android:textColor="#666666"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/btnOperation"
                android:background="@drawable/btn_bg_white"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="删除"
                android:textColor="@color/title_back_color"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_bg_red"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="修改"
                android:textColor="#ffffff"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
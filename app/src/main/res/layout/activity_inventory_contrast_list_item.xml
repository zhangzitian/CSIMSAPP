<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fromNoAndArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库位号：1-1-2-2"
                android:textSize="16sp"
                android:textColor="#fe6700" />
            <TextView
                android:id="@+id/tv_prodNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品编码：" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <!-- <Button
                android:id="@+id/btnProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/btnOperation"
                android:background="@drawable/btn_bg_white"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="待确认"
                android:textColor="@color/title_back_color"
                android:visibility="visible" />
            <Button
                android:id="@+id/btnGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_bg_red"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="空位"
                android:textColor="#ffffff"
                android:visibility="visible" />-->

            <TextView
                android:id="@+id/tv_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/title_back_color"
                tools:text="已领取" />

            <Button
                android:id="@+id/btnOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_bg_red"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="设置"
                android:textColor="#ffffff"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>